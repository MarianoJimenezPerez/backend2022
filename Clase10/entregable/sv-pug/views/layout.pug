html(lang="en")
    head    
        meta(charset="UTF-8")
        title server pug
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body 
        h1(class="text-center") Bienvenido al server con pug
        table(class="table")
            thead
                tr
                    th(scope="col", class="text-center") #
                    th(scope="col", class="text-center") Title 
                    th(scope="col", class="text-center") Price 
                    th(scope="col", class="text-center") Thumbnail
            tbody
                block anexo
        h3(class="text-center") Agregar producto nuevo
        form(action="/productos" method="POST")
            div(class="container")
                div
                    label(class="form-label") TÃ­tulo
                    input(type="text" class="form-control" placeholder="Ingrese titulo" name="title")
                div(class="mt-2")
                    label(class="form-label") Precio               
                    input(type="text" class="form-control" placeholder="Ingrese precio" name="price")
                div(class="mt-2")
                    label(class="form-label") Miniatura 
                    input(type="text" class="form-control" placeholder="Ingrese miniatura" name="thumbnail")
                button(type="submit" class="mt-2 btn btn-primary") Guardar
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")